{
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Contracts/*": ["./contracts/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/lucid",
      "@adonisjs/redis",
      "@adonisjs/session",
      "@adonisjs/auth",
      "@adonisjs/mail",
      "@adonisjs/view"
    ]
  }
}
